# Root and ESP (SSD)
LABEL=Thanatos		/		ext4		defaults							0	1
LABEL=ESP		/boot		vfat		defaults							0	2

# Home (SSD)
/dev/mapper/home	/home		ext4		defaults							0	2
# Media (HDD)
/dev/mapper/media	/media/Media	ext4		defaults							0	2

LABEL=Swap		none		swap		defaults							0	0

